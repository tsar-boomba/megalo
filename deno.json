{
	"fmt": {
		"options": {
			"useTabs": true,
			"singleQuote": true
		}
	},
	"lint": {
		"rules": {
			"exclude": ["ban-types", "no-explicit-any"]
		}
	},
	"tasks": {
		"bench": "deno run -A --unstable example.ts & sleep 1 && oha -z 30s",
		"bench:serve": "deno run -A --unstable example.ts --serve & sleep 0.5 && oha -z 30s"
	}
}
